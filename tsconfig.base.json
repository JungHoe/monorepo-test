{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "target": "es6",
      "lib": [
          "ES5",
          "ES6",
          "ESNext",
          "DOM"
      ],
      "skipLibCheck": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "isolatedModules": true
  },
  "references": [
      {
          "path": "packages/common"
      },
      {
          "path": "packages/app1"
      },
  ],
  "exclude": [
      "packages/**/dist/**"
  ],
  "include": []
}